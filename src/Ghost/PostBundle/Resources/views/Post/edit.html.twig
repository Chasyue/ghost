{% extends 'GhostPostBundle::layout.html.twig' %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3>Edit the reply</h3>
        </div>
        <div class="box-body">
            <form method="post" action="{{ path('post_edit', { 'id': post.id }) }}">
                {{ form_widget(form.body, { 'attr': {'class': 'input-block-level', 'rows': 6} }) }}
                {{ form_errors(form.body) }}
                {{ form_rest(form) }}
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}