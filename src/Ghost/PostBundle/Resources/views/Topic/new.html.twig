{% extends 'GhostPostBundle::layout.html.twig' %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3>Post a New Topic</h3>
        </div>
        <div class="box-body">
            <form method="post" action="{{ path('topic_new', {'categoryAlias': category.alias}) }}" {{ form_enctype(form) }}>
                {{ form_widget(form.title, { 'attr': {'class': 'input-block-level'} }) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.body, { 'attr': {'class': 'input-block-level', 'rows': 6} }) }}
                {{ form_errors(form.body) }}
                {{ form_rest(form) }}
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#topic_title').focus();
        });
    </script>
{% endblock %}