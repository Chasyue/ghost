{% extends 'GhostPostBundle::layout.html.twig' %}

{% block body %}
    <div class="well well-small well-white">
        <div class="well-header">
            <h3>Edit Topic</h3>
        </div>
        <div class="well-body">
            <form method="post" action="{{ path('topic_edit', { 'id': topic.id }) }}" {{ form_enctype(form) }}>
                {{ form_widget(form.title, { 'attr': {'class': 'input-block-level'} }) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.body, { 'attr': {'class': 'input-block-level', 'rows': 6} }) }}
                {{ form_errors(form.body) }}
                {{ form_rest(form) }}
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}