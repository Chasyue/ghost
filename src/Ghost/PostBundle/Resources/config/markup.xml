<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ghost.helper.markup" class="Ghost\PostBundle\Markup\MarkupHelper" public="false"/>

        <service id="ghost.event.markup" class="Ghost\PostBundle\EventListener\PostMarkupListener">
            <argument type="service" id="ghost.helper.markup" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>