{% extends 'GhostUserBundle::layout.html.twig' %}

{% block user_body %}
    <div class="box-header">
        <h3>@{{ user.username }}</h3>
    </div>
    <div class="box-body">
        <form method="post" class="form-horizontal" action="{{ path('user_edit') }}" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}