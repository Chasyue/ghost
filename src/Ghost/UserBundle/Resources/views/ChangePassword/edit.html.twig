{% extends 'GhostUserBundle::layout.html.twig' %}

{% block user_body %}
    <div class="box-header">
        <h3>Change Password</h3>
    </div>
    <div class="box-body">
        <form method="post" class="form-horizontal" action="{{ path('user_change_password') }}" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-success" type="submit">Change Password</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}