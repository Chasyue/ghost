{{ error }}

<form action="{{ path("security_login_check") }}" method="post" class="form-horizontal">
    <fieldset>
        <legend>登录</legend>

        <div class="control-group">
            <label for="username" class="control-label">Username</label>

            <div class="controls">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
            </div>
        </div>

        <div class="control-group">
            <label for="password" class="control-label">Password</label>

            <div class="controls"><input type="password" id="password" name="_password" required="required"/></div>
        </div>

        <div class="control-group">
            <label class="control-label"></label>

            <div class="controls">
                <label for="remember_me" class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on"/> Remember me
                </label></div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </fieldset>
</form>